fn newton_sqrt(x) {
  if (x < 0) {
    print('Cannot compute square root of negative number')
    0
  }

  if (x == 0) {
    0
  }

  guess = x / 2
  epsilon = 0.0001

  while (abs(guess * guess - x) > epsilon) {
    guess = (guess + x / guess) / 2
  }

  guess
}

print('Square root of 16 is approximately:')
print(newton_sqrt(16))
print('Square root of 2 is approximately:')
print(newton_sqrt(2))
